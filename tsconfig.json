{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "/",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./"]
		}
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules"]
}
